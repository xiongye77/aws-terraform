{
 "builders": [{
    "type": "amazon-ebs",
    "region": "ap-south-1",
    "source_ami": "ami-0d81476f28df77dde",
    "instance_type": "t2.micro",
    "ssh_username": "ubuntu",
    "ami_name": "api-instance {{timestamp}}"
  }],
  "provisioners": [
    {
      "type": "shell",
      "inline": ["mkdir api", "sudo apt-get  update"],
      "pause_before": "60s"
    },
    {
      "type": "file",
      "source" : "../api/",
      "destination" : "api"
    },

    {
    "type": "shell",
    "inline": ["cd api", "npm install"],
    "pause_before": "10s"
    }
  ]
}
